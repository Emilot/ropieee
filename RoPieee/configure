#!/bin/bash

CONF=/opt/RoPieee/conf

FILE=$1
if [ -n "$FILE" -a  ! -r "$FILE" ]
then
   echo "can't read file"
   exit 1
fi

if [ -n "$FILE" ]
then
   cp $FILE /etc/ropieee.conf
fi

. /etc/ropieee.conf

echo $rp_hostname > /etc/hostname

# ok here we go!
if [ -n "$FILE" ]
then
   echo "Configure finished. Rebooting!!!"
   sleep 1
   shutdown -r now
fi

exit 0 

