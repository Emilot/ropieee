#!/bin/bash

CONF=/opt/RoPieee/conf

FILE=$1
if [ -n "$FILE" -a  ! -r "$FILE" ]
then
   echo "can't read file"
   exit 1
fi

if [ -n "$FILE" ]
then
   cp $FILE /etc/ropieee.conf
fi

. /etc/ropieee.conf

# set the hostname
echo $rp_hostname > /etc/hostname

# configure audio
if [ "$rp_audio" = "usb" ]
then
   echo "configuring USB audio"
   sed -i '/dtoverlay=/d' /boot/config.txt
   echo "options snd slots=snd-usb-audio" > /etc/modprobe.d/alsa-base.conf
else
   echo "configuring audio HAT $rp_audio"
   rm -rf /etc/modprobe.d/alsa-base.conf
   echo -e "\ndtoverlay=$rp_audio" >> /boot/config.txt
fi

# ok here we go!
if [ -n "$FILE" ]
then
   echo "Configure finished. Rebooting!!!"
   sleep 1
   shutdown -r now
fi

exit 0 

